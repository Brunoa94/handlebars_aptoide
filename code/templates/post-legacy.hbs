{{!< default}}
<section id="main-body">
<div class="container">
    
	<div class="row">
        
		<div class="col-md-8">
            <div class="posts-card">
			<article class="{{post_class}}">
				{{#post}}
					<header class="post-header">
						<h2>{{{title}}}</h2>
                        <div>
							<span class="date">
								<i class="fa fa-clock-o"></i>
								{{date format="MMM DD, YYYY"}}
							</span>
							<span class="comment">
								<i class="fa fa-comment"></i>
								<a href="{{url absolute="true"}}#disqus_thread" data-disqus-identifier='ghost-{{comment_id}}' style="color:#000">Comments</a>
							</span>
                        </div>
						<div class="meta-info">
							{{#primary_author}}
							<span class="author">
								<i class="fa fa-user"></i>
								<a href="{{url}}">{{name}}</a>
							</span>
                            {{/primary_author}}
						</div>
                        <br>
						{{#if feature_image}}
							<img class="featured-image" src="{{img_url feature_image}}" alt="{{{title}}}" title="{{{title}}}" />
						{{else}}
							<img class="featured-image" src="{{asset "images/no-image.jpg"}}" />
						{{/if}}
					</header>
					
					<section class="post-content">
                        
						  {{content}}
                        
					</section>
					
					<footer class="post-footer">
						{{#if "tags"}}
						<section class="tags pull-left">
							<i class="fa fa-tags"></i> {{tags separator=" | "}}
						</section>
						{{/if}}
						
						
						<div class="clearfix"></div>
						
						{{> post-author}}
						
						<div class="clearfix"></div>
						    <div class="posts-divider"></div>
							<nav class="pull-right">
								<div class="pagination">
                            
									{{#next_post}}
									<a href="{{url}}" title="Back"><img src="{{asset "images/arrow.png"}}" alt="Back"></a>
									{{/next_post}}
									
                                    <a href="{{@site.url}}" title="Home"><img src="{{asset "images/home.png"}}" alt="Home"></a>
                                    
									{{#prev_post}}
									<a href="{{url}}" title="Next"><img src="{{asset "images/arrow-2.png"}}" alt="Next"></a>
									{{/prev_post}}
											
								</div>
							</nav>
								
						<div class="clearfix"></div>
						
						{{> comments}}
						
					</footer>
				{{/post}}
			</article>
		</div>
		
	</div>
         {{> sidebar}}
    </div>
    
</div>
   
</section>